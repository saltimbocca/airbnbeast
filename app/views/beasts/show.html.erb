<%= render "shared/navbar" %>

<div class="container mt-3 pt-3">
  <div class="header-show">

    <h6 class="return-section my-2 py-2">
      <i class="fa-solid fa-arrow-left-long"></i>
      <a class="link-return mx-2" href="/beasts">Go back to index</a>
    </h6>

    <h3>Look how cute is <%= @beast.name %>! Want to pet it?</h3>

    <div class="reviews d-flex mb-5 align-items-center">
      <i class="fa-solid fa-star"></i>
      <p class="review mx-2 py-2 my-0">
        <span class="note">4.88</span> • (34 reviews) •
        <span id="location">Location: Paris, France</span>
      </p>
    </div>
  </div>

  <div class="show-content d-flex">

    <div class="col-7 me-4">
      <% @beast.photos.each do |photo| %>
        <%= cl_image_tag photo.key, crop: :fill, class: "image-show" %>
      <% end %>
    </div>

    <div class="calendar-card col-5">
      <h4 class="my-3">When do you want to be whith <%= @beast.name %> ?</h4>
      <%= simple_form_for [@beast, @rental] do |f| %>
        <div class="d-flex justify-content-between">
          <div class="border rounded p-2 me-1 col-6">
            <%= f.input :start_date, label: "Start date", placeholder: 'When?', html5: true%>
          </div>
          <div class="border rounded p-2 col-6">
            <%= f.input :end_date, html5: true %>
          </div>
        </div>
        <%= f.button :submit, label: "End date", class: "btn-submit-green"%>
      <% end %>
    </div>
  </div>

  <div class="owner-section my-5 col-6 py-4">
    <div class="top-section d-flex align-items-center">

        <%# ici  %>
      <%# <div class="avatar-show me-4"></div> %>
      <% if @beast.user.photo.key.nil? %>
      <%= image_tag "https://res.cloudinary.com/dngfqo2nf/image/upload/w_1000,ar_1:1,c_fill,g_auto,e_art:hokusai/v1645787355/production/2u56hzrwakl8ztsse6yxrvyevzxk.jpg", :gravity=>"face", :height=>40, :radius=>30, :width=>40, :crop=>"fill", class: "avatar-large me-2" %>

      <% else %>
      <%= cl_image_tag @beast.user.photo.key, :gravity=>"face", :height=>40, :radius=>30, :width=>40, :crop=>"fill", class: "avatar-large me-2" %>

      <% end %>

      <div class="text-wrapper">
        <h4 class="my-1">Owner: <%= @beast.user.first_name %> <%= @beast.user.last_name %></h4>
        <p class="my-1">Hello, I am the proud owner of <%= @beast.name %></p>
      </div>
    </div>
    <hr class="mb-4">
    <p class="description-owner">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Consectetur quam amet recusandae facilis modi sed dignissimos corporis pariatur nam praesentium? Assumenda minus veritatis hic similique molestiae nulla facilis doloremque suscipit?</p>
  </div>
  <br>
</div>


<footer class="footer mt-5 w-100">
  <div class="top">
    <p>Ready for an unforgettable experience?</p>
    <h2>Sign up now!</h2>
    <a href="#" class="btn btn-default my-4">Get me in!</a>
  </div>
  <p>Copyright © 2022. airbnbeast. All rights reserved.</p>
</footer>

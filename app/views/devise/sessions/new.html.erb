<div class="form-wrapper col-md-8 col-lg-6">
<!--   <h2>Log in</h2> -->
  <p>Contents de te revoir !</p>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  placeholder: 'email',
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  placeholder: 'password',
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%#= f.input :remember_me, :input_html => { checked: "checked" }, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <div class="form-link hidden-lg">
    <%= render "devise/shared/links"%>
  </div>
</div>

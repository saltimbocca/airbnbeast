<header class="header-main">

  <div class="sticky-navbar">
    <div class="navbar-wrapper px-5 py-3">

      <nav class="navbar">
        <%= link_to "airbnbeast", root_path, class: 'brand-logo' %>
        <%= render "pages/dropdown_user", user: @user %>
      </nav>

      <div class="search-wrapper">
        <%= form_tag(beasts_path, {method: :get, class: 'searchbar py-3 ps-5 pe-3 w-100'}) do %>
          <div class='form-control border-0 border-right search-items pe-4 border-end'>
            <%= label_tag :query, 'Find your beast' %>
            <%= text_field_tag :query,
              params[:query],
              placeholder: "Crocodile"
            %>

          </div>
          <div class='form-control border-0 border-right search-items pe-4 border-end'>
            <%= label_tag 'Start date' %>
            <%= text_field_tag :start_date,
              params[:start_date],
              placeholder: "Today!",
              as: :string, input_html: { id: "start_date" }
            %>
          </div>
          <div class='form-control border-0 border-right search-items'>
            <%= label_tag 'End date' %>
            <%= text_field_tag :end_date,
              params[:end_date],
              placeholder: "If you survive!",
              as: :string, input_html: { id: "end_date" }
            %>
          </div>
          <%= button_tag(beasts_path, {class: "btn rounded-green-btn d-flex align-items-center justify-content-center px-4"}) do %>
            <i class="fa-solid fa-magnifying-glass"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="header-card-wrapper w-100 px-5 pt-3">
    <div style="background-image: url('https://images.unsplash.com/photo-1528158222524-d4d912d2e208?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2040&q=80')" class="card-header">
      <div class="content-wrapper d-flex flex-column align-items-center mb-4">
        <h4>Nobody wants your Venomous Viper? <br> That's fine.</h4>
        <a href="/beasts" class="btn btn-default my-4">I am flexible</a>
      </div>
    </div>
  </div>

</header>

